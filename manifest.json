{
  "manifest_version": 3,
  "name": "Thunderbird-Todoist Integration",
  "version": "0.1.0",
  "description": "Attach emails as subtask notes to Todoist tasks",

  "browser_specific_settings": {
    "gecko": {
      "id": "thunderbird-todoist@local.extension",
      "strict_min_version": "102.0"
    }
  },

  "permissions": [
    "messagesRead",
    "storage",
    "tabs",
    "compose"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "message_display_action": {
    "default_title": "Todoist",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.svg",
      "32": "icons/icon-32.svg",
      "64": "icons/icon-64.svg"
    }
  },

  "compose_action": {
    "default_title": "Attach to Todoist Task",
    "default_popup": "compose-popup.html",
    "default_icon": {
      "16": "icons/icon-16.svg",
      "32": "icons/icon-32.svg",
      "64": "icons/icon-64.svg"
    }
  },
  
  "icons": {
    "16": "icons/icon-16.svg",
    "32": "icons/icon-32.svg",
    "64": "icons/icon-64.svg"
  },

  "host_permissions": [
    "https://api.todoist.com/*"
  ]
}